@model DesingPatterns_AspNet.Models.ViewsModels.FormViewModel

<form asp-controller="Beer" asp-action="Add" method="post">


    <div class="mb-5">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-5">
        <label asp-for="Style"></label>
        <input type="text" class="form-control" asp-for="Style" />
        <span asp-validation-for="Style" class="text-danger"></span>
    </div>

    <div class="mb-5">
        <label asp-for="BrandId"></label>
        <select type="text" class="form-control" asp-for="BrandId" asp-items="@ViewBag.Brands" >
            <option value="">Selecciona Marca</option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <div class="mb-5">
        <label asp-for="OtherBrand"></label>
        <input type="text" class="form-control" asp-for="OtherBrand" />
        <span asp-validation-for="OtherBrand" class="text-danger"></span>
    </div>

    <div class="mb-5">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>